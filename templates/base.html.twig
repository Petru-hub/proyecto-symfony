<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenido{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}

    </head>
    <body>
        {% block header %}
            <div id="header">
                <h1>Tareas en Symfony</h1>
                    <ul id="menu">
                        {% if app.user %}
                            <li><a href="{{ path('tasks') }}">Inicio</a></li>
                            <li><a href="{{ path('my_tasks') }}">Mis Tareas</a></li>
                            <li><a href="{{ path('task_creation') }}">Crear Tarea</a></li>
                            <li class="right"><a href="{{ path('logout') }}">Cerrar Sesion</a></li>
                            <li class="right"><a href="">{{ app.user.name ~ ' ' ~ app.user.surname}}</a></li>
                        {% else %}
                            <li><a href="{{ path('login') }}">Iniciar Sesion</a></li>
                            <li><a href="{{ path('register') }}">Registro</a></li>
                        {% endif %}
                    </ul>
            </div>
            <div class="clearfix"></div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
